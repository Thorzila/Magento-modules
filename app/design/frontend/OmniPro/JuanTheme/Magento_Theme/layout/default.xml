<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="header-wrapper" htmlClass="bmg-header-container bmg-header-inverse container">
            <!-- logo -->
            <container name="header-logo-container" htmlTag="div" htmlClass="header-logo-container">
                <referenceBlock name="logo">
                    <arguments>
                        <argument name="logo_file" xsi:type="string">images/logo.svg</argument>
                    </arguments>
                </referenceBlock>
            </container>
        </referenceContainer>
        <referenceContainer name="columns.top">
            <referenceBlock name="page.main.title" remove="true"></referenceBlock>
        </referenceContainer>
        <referenceBlock name="report.bugs" remove="true"></referenceBlock>
        <referenceBlock name="top.search" remove="true"></referenceBlock>
    </body>
</page>