<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
     <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">omnipro_blog_create.omnipro_blog_post_data_source</item>
            <item name="deps" xsi:type="string">omnipro_blog_create.omnipro_blog_post_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">Form blog</item>
        <item name="layout" xsi:type="array">
            <item name="type" xsi:type="string">tabs</item>
        </item>
        <!-- <item name="buttons" xsi:type="array">`
            <item name="back" xsi:type="string">OmniPro\Blog\Block\Adminhtml\BlogButton\BackButton</item>
            <item name="delete" xsi:type="string">OmniPro\Blog\Block\Adminhtml\Blog\Button\DeleteButton</item>
            <item name="reset" xsi:type="string">OmniPro\Blog\Block\Adminhtml\Blog\Button\ResetButton</item>
            <item name="save" xsi:type="string">OmniPro\Blog\Block\Adminhtml\Blog\Button\SaveButton</item>
        </item> -->
        <item name="buttons" xsi:type="array">
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="class" xsi:type="string">OmniPro\Blog\Block\Adminhtml\Blog\Button\SaveButton primary</item>
                <item name="label" xsi:type="string" translate="true">Guardar</item>
            </item>
        </item>
    </argument>

    <dataSource  name="omnipro_blog_post_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">OmniPro\Blog\Model\Blog\DataProvider</argument>
            <argument name="name" xsi:type="string">omnipro_blog_post_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">post_id</argument>
            <argument name="requestFieldName" xsi:type="string">post_id</argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <!--<dataSource> component="Magento_Ui/js/grid/provider" ... </dataSource> -->
        <!-- Configuracion alternativa de dataProvider -->
        <!-- <settings>
            <updateUrl path="mui/index/render"/>
        </settings>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="omnipro_blog_post_data_source">
            <settings>
                <requestFieldName>post_id</requestFieldName>
                <primaryFieldName>post_id</primaryFieldName>
            </settings>
        </dataProvider> -->
    </dataSource>
  
    <fieldset name="blog">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string" translate="true"></item>
            </item>
        </argument>

        <!-- <field name="url">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                </item>
            </argument>
        </field> -->

        <field name="post_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
        </field>

        <field name="post_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Titulo</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
        </field>
        <field name="post_content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="cols" xsi:type="number">15</item>
                    <item name="rows" xsi:type="number">5</item>
                    <item name="label" xsi:type="string">Contenido</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
        </field>
     <field name="post_email">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Email</item>
                    <item name="visible" xsi:type="boolean">true</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="source" xsi:type="string">blog</item>
                </item>
            </argument>
        </field>
        <field name="post_img">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="required" xsi:type="boolean">false</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">false</item>
                    </item>
                    <item name="sortOrder" xsi:type="number">333</item>
                    <item name="dataType" xsi:type="string">string</item>
                    <item name="formElement" xsi:type="string">fileUploader</item>
                    <item name="label" xsi:type="string" translate="true">Imagen</item>
                    <item name="uploaderConfig" xsi:type="array">
                        <item name="url" xsi:type="url" path="catalog/category_image/upload"/>
                    </item>
                    <item name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</item>
                    <item name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</item>
                </item>
            </argument>
        </field>
  </fieldset>
</form>
