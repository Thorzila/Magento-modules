<?xml version="1.0" ?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <fieldset name="general">
        <field name="sample_category_attribute" formElement="imageUploader">
            <settings>
                <label translate="true">Sample Category Attribute</label>
                <componentType>imageUploader</componentType>
            </settings>
            <formElements>
                <imageUploader>
                    <settings>
                        <allowedExtensions>jpg jpeg gif png</allowedExtensions>
                        <maxFileSize>2097152</maxFileSize>
                        <uploaderConfig>
                            <param xsi:type="string" name="url">catalog/category_image/upload</param>
                            <param name="elementTmpl" xsi:type="string">ui/form/element/uploader/uploader</param>
                            <param name="previewTmpl" xsi:type="string">Magento_Catalog/image-preview</param>
                        </uploaderConfig>
                    </settings>
                </imageUploader>
            </formElements>
        </field>
    </fieldset>
</form>
